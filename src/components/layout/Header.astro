---

<header class="bg-white shadow-md fixed w-full z-50">
  <nav class="container mx-auto flex items-center justify-between p-4">
    
    <!-- Logo -->
    <a href="/" class="text-xl font-bold text-blue-600">
      RYKUO
    </a>

    <!-- Botón hamburguesa (solo móvil) -->
    <button id="menu-btn" class="md:hidden text-gray-800 focus:outline-none">
      ☰
    </button>

    <!-- Menú -->
    <ul id="menu" class="hidden md:flex space-x-6 font-medium">
      <li><a href="/" class="hover:text-blue-600">Inicio</a></li>
      <li><a href="/productos" class="hover:text-blue-600">Productos</a></li>
      <li><a href="/servicios" class="hover:text-blue-600">Servicios</a></li>
      <li><a href="/contacto" class="hover:text-blue-600">Contacto</a></li>
    </ul>

  </nav>

  <!-- Menú móvil desplegable -->
  <div id="mobile-menu" class="hidden md:hidden bg-white shadow-lg transition-all duration-300">
    <ul class="flex flex-col p-4 space-y-4 font-medium">
      <li><a href="/" class="block hover:text-blue-600">Inicio</a></li>
      <li><a href="/productos" class="block hover:text-blue-600">Productos</a></li>
      <li><a href="/servicios" class="block hover:text-blue-600">Servicios</a></li>
      <li><a href="/contacto" class="block hover:text-blue-600">Contacto</a></li>
    </ul>
  </div>
</header>

<!-- Script menú móvil -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.getElementById("menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");

    if (btn && mobileMenu) {
      btn.addEventListener("click", () => {
        mobileMenu.classList.toggle("hidden");
      });
    }
  });
</script>
</header>